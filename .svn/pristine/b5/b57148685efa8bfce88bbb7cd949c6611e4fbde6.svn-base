 <!--邀请-->

    <div class="bar bar-header bar-positive">
	<h3 class="title">邀请</h3>
	<div class=" position-r0">
	<div class="pt8l15" ui-sref="invite_rule">规则</div>
	</div>
</div>

<ion-view view-title="邀请好友">
	<ion-content class="bg has-header" ng-controller="invite_ctr">
	<div class="section">
			
			<div class="section-total-money pt20 border0" style="line-height: 80%;">
				    		
				    						    		{{inviteInfo.inviteOneIncoming | currency : '￥'}}
				    		<div class="section-total-money-title">
				每邀请一位好友可获得收益
			</div>
			</div>
			
			<div class="section-gains-two row bt1 text-center">
				<div class="col col-50 border-left ">
						<div class="money pt10b0">
						    		    {{inviteInfo.invitecount}}
						    		    	

					</div>
					<div class="title">
						成功邀请
					</div>
				
				</div>
				<div class="col col-50">
					<div class="money pt10b0">
						{{inviteInfo.income_invitation | currency : '￥'}}
					
					</div>
					<div class="title">
						累计收益
					</div>
					
				</div>
			</div>
			<div class="invite-title">
				
				<span class="invite-title-desc">我的邀请码:</span>

					     <button class="button button-small button-outline button-positive">button-positive</button>
<div class="invite-title-copy">
	点击按钮复制
</div>
			</div>
			<div class="plr25">
			<button class="button mt30 button-block  btn-red" on-tap="login()">立即邀请</button>
		</div>
		<div class="invite-message">
			<div class="message">
				邀请小提示:
			</div>
			<div class="row">
				
				<div class="col col-30 setp">
					第一步
					<div>
					点击立即邀请
				</div>
				</div>
				<div class="col col-30 setp">
						第二步
					<div>
					分享给好友
				</div>
</div>
				<div class="col col-30 setp">
						第三步
					<div>
					发送邀请码
				</div>
</div>
			</div>
				<div class="message" style="padding: 10px 20px;">
				注:好友输入您的邀请码并通过身份认证后，您可获得收益！
			</div>
		</div>
		</div>
		
	</ion-content>
</ion-view>

   