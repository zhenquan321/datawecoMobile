 <ion-view view-title="个人信息" ng-controller="UserMag_ctr">
    <ion-content class="bg">
        <ion-refresher pulling-text="下拉刷新" on-refresh="doRefresh()" style="z-index: 10;"></ion-refresher>
        <div id="userMag">
            <div class="title_um">
                <img ng-src="{{$root.PictureSrc}}" alt="Alternate Text" />
                <br />
                <span>{{$root.Gender}}</span>
            </div>
            <div class="nei_list">
                <div class="list">

                    <a class="item item-icon-left">
                        <i class="ion-android-contact"></i>
                        个人信息
                        <span class="item-note">
                            完整度：<span style="color: #52a290">80%</span>
                        </span>
                    </a>

                    <a class="item item-icon-left item-icon-right" style="border-bottom:0;">
                        <i class="ion-ios-analytics"></i>
                        好知币
                        <span class="item-note">
                            余额：<span style="color: #52a290">500</span>币
                        </span>
                    </a>
                </div>
            </div>


            <div class="nei_list mt10">
                <div class="list">

                    <a class="item item-icon-left">
                        <i class="ion-android-create"></i>
                        反馈意见
                    </a>

                    <a class="item item-icon-left item-icon-right" style="border-bottom:0;">
                        <i class="ion-android-settings"></i>
                        设置
                    </a>
                </div>
            </div>
            <div class="nei_list mt10">
                <div class="list" ng-click="getout()">
                    <a class="item item-icon-left" style="text-align: center; border: 0; height: 38px; padding: 10px; color: #de6a6a;">
                        退出账号
                    </a>
                </div>
            </div>

        </div>
    </ion-content>
</ion-view>


